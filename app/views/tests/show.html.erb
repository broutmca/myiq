<div class="container">
<p id="notice"><%= notice %></p>
<div class="form-group row">
    <label for="subject" class="col-xs-3 col-form-label mr-2">Category:</label>
    <div class="col-xs-9">
      <%= select_tag(:subject_id, options_for_select(Subject.all.map{|s|[s.title, s.id]}, @test.subject_id),{include_blank: "Select Subject", class: "form-control"})%>
    </div>
  </div>
  <div class="form-group row">
    <label for="time_required" class="col-xs-3 col-form-label mr-2">Time Required(In minutes):</label>
    <div class="col-xs-9">
      <%= number_field_tag :time_required, @test.time_required , {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <label for="number_of_questions" class="col-xs-3 col-form-label mr-2">Number of Questions:</label>
    <div class="col-xs-9">
      <%= number_field_tag :number_of_questions, @test.number_of_questions , {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group row">
    <label for="user" class="col-xs-3 col-form-label mr-2">User:</label>
    <div class="col-xs-9">
      <%= select_tag(:user_id, options_for_select(User.all.map{|s|[s.email, s.id]}, current_user.id),{:disabled => true, class: "form-control"})%>
    </div>
  </div>
<%= link_to 'Edit', edit_test_path(@test), {class: "btn btn-primary"} %> |
<%= link_to 'Back', tests_path , {class: "btn btn-primary"}%>
</div>