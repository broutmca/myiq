<p id="notice"><%#= notice %></p>
<div class="container">
  <h2>Tests</h2>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th >ID#</th>
        <th> Title </th>
        <th> Time </th>
        <th> No of questions </th>
        <th> Show</th>
        <th> Edit</th>
        <!-- <th> Destroy</th> -->
        <th> Start</th>
      </tr>
    </thead>
    <tbody> 
      <% @tests.each do |test|  %>   
      <tr class="">
        <td><%= test.id %></td>
        <td><%= test.subject.title  %></td>
        <td><%= test.time_required %> minutes</td>
        <td><%= test.number_of_questions %> questions</td>
        <td><%= link_to 'Show', test , class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_test_path(test) , class: "btn btn-primary"%></td>
        <!-- <td><%#= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td> -->
        <td> <%= link_to 'Start', test_start_path(test), class: "btn btn-success"%> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Test', new_test_path , class: "btn btn-info"%>
