  <!-- User: <%#= form.select :user_id, options_for_select(User.all.map{|s|[s.email, s.id]}, current_user.id),{},{:disabled => true} %><br/><br/>  -->

  <!-- <div class="actions">
    <%#= form.submit %>
  </div> -->
  <div class="form-group row">
    <div class="offset-xs-3 col-xs-9">
      <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
      <%= form.submit "Submit", {class: "btn btn-primary"} %>
    </div>
  </div>
<% end %>
</div>